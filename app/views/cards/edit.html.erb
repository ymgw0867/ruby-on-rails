<h1>Cards#edit</h1>
<p>※<%= @cards.title %>の内容を編集を行います</p>
<table>
    <%= form_for(@cards, url:{ controller: 'cards', action: 'edit', id:@cards.id}) do |f| %>   
        <tr><th>タイトル</th><td><%= f.text_field :title, {size:40} %></td></tr>
        <tr><th>著者</th><td><%= f.text_field :author, {size:40} %></td></tr>
        <tr><th>価格</th><td><%= f.number_field :price, {size:10} %></td></tr>
        <tr><th>出版社</th><td><%= f.text_field :publisher, {size:40} %></td></tr>
        <tr><th>コメント</th><td><%= f.text_area :memo, {cols:40, rows:10} %></td></tr>
        <tr><th></th><td><%= f.submit "更新" %></td></tr>
    <% end %>
      
</table>

<p class="link"><a href="/cards">&lt;&lt; ※トップページに戻る</a></p>